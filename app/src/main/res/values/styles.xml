<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">#99dcfa</item>
            <item name="colorPrimaryDark">#99dcfa</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>
        <style name="LoggingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">#99dcfa</item>
            <item name="colorPrimaryDark">#99dcfa</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>
        <style name ="myTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
            <item name="android:textColor">#ffffff</item>
            <item name="android:background">#99dcfa</item>
        </style>
        <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#ffffff</item>
        </style>

</resources>


