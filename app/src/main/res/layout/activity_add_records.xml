<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecords">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:theme="@style/myTheme"
        app:title="Traveller"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--我先改小了，不然按钮放不下，你可以再调整-->
        <EditText
            android:id="@+id/Rec_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="top"
            android:maxLines="6"
            android:layout_gravity="center_horizontal"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tab_use_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Use title"
        android:layout_centerInParent="true"/>
    <CheckBox
        android:id="@+id/use_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tab_use_title"
        />
</RelativeLayout>


        <EditText
            android:id="@+id/Rec_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="title"
            android:visibility="invisible"
            android:maxLines="1"
            android:inputType="text"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/Rec_image"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@color/colorPrimary"
    />

    <Button
        android:id="@+id/Rec_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_gravity="center_horizontal"/>

    <!-- choose a picture-->
    <Button
        android:id="@+id/Rec_choose_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Picture"
        />

    <!-- take a photo-->
    <Button
        android:id="@+id/Rec_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo" />

    <!-- show the picture you just got-->
    <ImageView
        android:id="@+id/picture"
        android:adjustViewBounds="true"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Rec_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Location"/>

        <Button
            android:id="@+id/Rec_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Map"
            android:visibility="invisible"/>


    </LinearLayout>


    <TextView
        android:id="@+id/Rec_show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>